@page
@model LoanReturnBooksModel
@{
    ViewData["Title"] = "Loan/Return Books";
}

<h1>Loan/Return Books</h1>

<h2>Loan a Book</h2>
<form method="post" asp-page-handler="LoanBookByName">
    <div>
        <label for="subscriberName">Subscriber Name:</label>
        <input type="text" id="subscriberName" name="SubscriberName" required />
    </div>
    <div>
        <label for="bookName">Book Name:</label>
        <input type="text" id="bookName" name="BookName" required />
    </div>
    <button type="submit">Loan Book</button>
</form>

<hr />

<h2>Return a Book</h2>
<form method="post">
    <div>
        <label for="returnBookId">Book ID:</label>
        <input type="text" id="returnBookId" name="ReturnBookId" required />
    </div>
    <button type="submit">Return Book</button>
</form>
